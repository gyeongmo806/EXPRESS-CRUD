html
    head
        link(rel="stylesheet" href="/index.css")
        link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous")
        title update
    body
        .container-fluid
            .navbar.navbar-light.bg-light.navbar-expand-lg
                span.navbar-brand.mb-0.h1 POTFOLIO
                ul.navbar-nav
                    li.nav-item.active
                        a.nav-link(href="/") Home
        .container
            .section
                .article
                    .div
                        form(action="/api/update/"+data.id method="POST")
                            p
                                input(class="form-control" name="title" id="title" type="text" value= data.title)
                            p
                                textarea(class="form-control" name="des", cols="30", rows="10")= data.des
                            p
                                input.btn.btn-primary(type="submit")